MAINTAINER myNAME 
COPY testprj-1.0-SNAPSHOT.jar /home/testprj-1.0-SNAPSHOT.jar
RUN java -jar /home/testprj-1.0-SNAPSHOT.j


docker run -it --rm anapsix/alpine-java java -version

docker run -it --rm anapsix/alpine-java java –jar signapk.jar certificate.pem key.pk8 mgt-1234-1-77.apk mgt-1234-1-77firmado.apk

